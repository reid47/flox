{
  "name": "flox",
  "version": "0.0.1",
  "description": "Small, functional flexbox CSS library",
  "main": "flox.css",
  "scripts": {
    "serve": "./node_modules/.bin/live-server",
    "build-css": "./node_modules/.bin/node-sass flox.scss flox.css",
    "watch-css": "./node_modules/.bin/node-sass --watch flox.scss flox.css",
    "build-html": "./node_modules/.bin/pug index.pug --pretty",
    "watch-html": "./node_modules/.bin/pug index.pug --watch",
    "watch": "concurrently \"npm run serve\" \"npm run watch-css\" \"npm run watch-html\""
  },
  "author": "Reid Mitchell",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^3.5.1",
    "live-server": "^1.2.0",
    "node-sass": "^4.7.2",
    "pug-cli": "^1.0.0-alpha6"
  }
}
